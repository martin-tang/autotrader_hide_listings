{
  "name": "AutoTrader.CA Hide Sponsored Listings",
  "description": "Hide or highligh sponsored listings, similar to Autotrader.com",
  "permissions": [
    "storage"
  ],
  "options_page": "options.html",
  "author": {
    "email": "martinidevelop@gmail.com"
  },
  "version": "0.2",
  "manifest_version": 3,
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon16.png"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://www.autotrader.ca/*"],
      "js": ["autotrader_ca_highlight_hide.js"]
    }
  ]
}
